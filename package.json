{
    "name": "@eztrip/ts-types",
    "version": "1.0.0",
    "author": "5exyGuy",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eztrip-trip-planner/eztrip-ts-typesgit"
    },
    "bugs": {
        "url": "https://github.com/eztrip-trip-planner/eztrip-ts-typesissues"
    },
    "homepage": "https://github.com/eztrip-trip-planner/eztrip-ts-types#readme",
    "scripts": {
        "clean": "rm -rf dist",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "build": "pnpm clean && pnpm build:main && pnpm run build:types",
        "build:main": "esbuild src/index.ts --bundle --platform=neutral --minify --sourcemap=external --outfile=dist/index.js",
        "build:types": "dts-bundle-generator --out-file dist/types.d.ts src/index.ts"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "dts-bundle-generator": "^6.6.0",
        "esbuild": "^0.14.30",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "prettier": "2.6.2",
        "typescript": "^4.6.3"
    }
}
